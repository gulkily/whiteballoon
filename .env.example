# Database connection string (SQLite by default)
DATABASE_URL=sqlite:///data/app.db

# Dedicated database for direct messaging (SQLite by default)
MESSAGING_DATABASE_URL=sqlite:///data/messages.db

# Cryptographic secret for signing sessions
SECRET_KEY=changeme

# Session expiry in minutes (14 days by default)
SESSION_EXPIRY_MINUTES=20160

# Set true to mark cookies Secure (required for HTTPS-only deployments)
COOKIE_SECURE=false

# Allow members to publish a contact email on requests
ENABLE_CONTACT_EMAIL=true

# Enable the direct messaging module (admins can toggle in the UI)
ENABLE_DIRECT_MESSAGING=false

# Show inline comment insight badges (admins only; default off)
COMMENT_INSIGHTS_INDICATOR=false

# Enable Signal profile glazing (bios on /people/<username> and admin pages)
PROFILE_SIGNAL_GLAZE=false

# Base URL for absolute links in emails/exports
SITE_URL=http://127.0.0.1:8000
# Public-facing brand/title shown in templates and <title>
SITE_TITLE=WhiteBalloon

# Skin system toggles (set to true to enable custom CSS skins)
WB_SKINS_ENABLED=false
WB_SKIN_DEFAULT=default
WB_SKINS_ALLOWED=default,terminal,paper,signal-ledger,break-in
WB_SKINS_MANIFEST_PATH=static/build/skins/manifest.json
WB_SKIN_PREVIEW_ENABLED=false
WB_SKIN_PREVIEW_PARAM=skin
WB_SKIN_STRICT=false

# Dedalus Labs API key for Mutual Aid Copilot integration
DEDALUS_API_KEY=
# Timestamp of last verified Dedalus connection (managed automatically)
DEDALUS_API_KEY_VERIFIED_AT=

# Override path to hub config file when running `wb hub`
WB_HUB_CONFIG=.sync/hub_config.json

# Override sync storage directory (keys, bundles, manifests)
WB_SYNC_HOME=.sync

# Enable Slack-style request channels workspace
REQUEST_CHANNELS=false

# Feature flags
# Toggle the peer verification queue (reviewer approvals + ledger)
WB_FEATURE_PEER_AUTH_QUEUE=false
# Allow self-authentication using the same 6-digit code (bypasses peer queue when true)
WB_FEATURE_SELF_AUTH=false
# Show non-admin status chips (Pending verification, Half-auth, Member) in the navbar
WB_FEATURE_NAV_STATUS_TAGS=false
